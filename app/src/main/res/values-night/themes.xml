<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.SIMON" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/azul_escuro</item>
        <item name="android:buttonBarStyle">@color/black</item>
        <!-- custom assets -->
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/azul_escuro</item>
    </style>

    <style name="Theme.SIMON.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="loginScreen" parent="Theme.SIMON">
        <item name="android:background">@color/azul_escuro</item>
    </style>

</resources>