<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="UserFragment"
    android:scrollbarSize="0dip">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivPerfil"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="35dp"
        android:backgroundTint="@color/azul_escuro"
        android:src="@drawable/fotoperfil"
        app:civ_border_width="4dp"
        app:civ_border_color="@color/azul_escuro"
        />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivSmallerCam"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="@id/ivPerfil"
            app:layout_constraintEnd_toEndOf="@id/ivPerfil"
            android:src="@color/azul_claro"
            app:civ_border_width="4dp"
            app:civ_border_color="@color/azul_escuro"/>

        <Button
            android:id="@+id/btnChangePhoto"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/photo"
            android:backgroundTint="@color/fui_transparent"
            app:layout_constraintStart_toStartOf="@id/ivSmallerCam"
            app:layout_constraintEnd_toEndOf="@id/ivSmallerCam"
            app:layout_constraintTop_toTopOf="@id/ivSmallerCam"
            app:layout_constraintBottom_toBottomOf="@id/ivSmallerCam"
            />

    <TextView
        android:id="@+id/tvNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/ivPerfil"
        app:layout_constraintEnd_toEndOf="@id/ivPerfil"
        app:layout_constraintTop_toBottomOf="@id/ivPerfil"
        android:layout_marginTop="15sp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:text="João Lisan Al Gaib Muadib"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="24sp"
        />

    <TextView
        android:id="@+id/tvContato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNome"
        android:layout_marginTop="25dp"
        android:layout_marginStart="30dp"
        android:text="Contato"
        android:textStyle="bold"
        android:textSize="20sp"
        />

        <EditText
            android:id="@+id/etCel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/textbox"
            android:drawableStart="@drawable/whatsapp"
            android:drawablePadding="6dp"
            android:enabled="false"
            android:maxLines="1"
            android:minHeight="45dp"
            android:paddingStart="10dp"
            android:paddingEnd="45dp"
            android:singleLine="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvContato" />

        <ToggleButton
        android:id="@+id/btnEditarCel"
        android:layout_width="45dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="@id/etCel"
        app:layout_constraintBottom_toBottomOf="@id/etCel"
        app:layout_constraintEnd_toEndOf="@id/etCel"
        android:textAlignment="center"
        android:drawableStart="@drawable/toggle_selector"
        android:backgroundTint="@color/amarelo"/>


    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="45dp"
        app:layout_constraintTop_toBottomOf="@id/etCel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/textbox"
        android:drawableStart="@drawable/email"
        android:paddingStart="10dp"
        android:paddingEnd="45dp"
        android:drawablePadding="6dp"
        android:enabled="false"
        android:maxLines="1"
        android:singleLine="true"
        />

        <ToggleButton
            android:id="@+id/btnEditarEmail"
            android:layout_width="45dp"
            android:layout_height="48dp"
            android:textAlignment="center"
            android:drawableStart="@drawable/toggle_selector"
            android:backgroundTint="@color/amarelo"
            app:layout_constraintBottom_toBottomOf="@id/etEmail"
            app:layout_constraintEnd_toEndOf="@id/etEmail"
            app:layout_constraintTop_toTopOf="@id/etEmail"/>

    <TextView
        android:id="@+id/tvPredio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/etPredio"
        app:layout_constraintTop_toBottomOf="@id/etEmail"
        android:layout_marginTop="35dp"
        android:text="Prédio"
        android:textStyle="bold"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/etPredio"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:minHeight="45dp"
        app:layout_constraintTop_toBottomOf="@id/tvPredio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/etSala"
        android:background="@drawable/textbox"
        android:drawableStart="@drawable/building"
        android:paddingStart="10dp"
        android:paddingEnd="15dp"
        android:drawablePadding="6dp"
        android:enabled="false"
        android:maxLines="1"
        android:singleLine="true"
        />

        <ToggleButton
            android:id="@+id/btnEditarPredio"
            android:layout_width="45dp"
            android:layout_height="48dp"
            android:textAlignment="center"
            android:drawableStart="@drawable/toggle_selector"
            android:backgroundTint="@color/amarelo"
            app:layout_constraintBottom_toBottomOf="@id/etPredio"
            app:layout_constraintEnd_toEndOf="@id/etPredio"
            app:layout_constraintTop_toTopOf="@id/etPredio"/>

    <TextView
        android:id="@+id/tvSala"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/etSala"
        app:layout_constraintTop_toTopOf="@id/tvPredio"
        android:layout_marginTop="0dp"
        android:text="Sala"
        android:textStyle="bold"
        android:textSize="20sp"
        />


        <EditText
            android:id="@+id/etSala"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:minHeight="45dp"
            app:layout_constraintTop_toBottomOf="@id/tvPredio"
            app:layout_constraintStart_toEndOf="@id/etPredio"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/textbox"
            android:drawableStart="@drawable/room"
            android:paddingStart="10dp"
            android:paddingEnd="15dp"
            android:drawablePadding="6dp"
            android:enabled="false"
            android:maxLines="1"
            android:singleLine="true"
            />

        <ToggleButton
            android:id="@+id/btnEditarSala"
            android:layout_width="45dp"
            android:layout_height="48dp"
            android:textAlignment="center"
            android:drawableStart="@drawable/toggle_selector"
            android:backgroundTint="@color/amarelo"
            app:layout_constraintBottom_toBottomOf="@id/etSala"
            app:layout_constraintEnd_toEndOf="@id/etSala"
            app:layout_constraintTop_toTopOf="@id/etSala"/>

        <TextView
            android:id="@+id/tvHorario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/etPredio"
            app:layout_constraintTop_toBottomOf="@id/etPredio"
            android:layout_marginTop="20dp"
            android:text="Horário"
            android:textStyle="bold"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/tvDe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/etPredio"
            app:layout_constraintTop_toBottomOf="@id/tvHorario"
            android:layout_marginTop="5dp"
            android:text="De"
            android:textStyle="bold"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/tvAte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/etHorarioAte"
            app:layout_constraintTop_toBottomOf="@id/tvHorario"
            android:layout_marginTop="5dp"
            android:text="Até"
            android:textStyle="bold"
            android:textSize="20sp"
            />

        <EditText
            android:id="@+id/etHorarioDe"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:minHeight="45dp"
            app:layout_constraintTop_toBottomOf="@id/tvDe"
            app:layout_constraintStart_toStartOf="@id/tvDe"
            android:background="@drawable/textbox"
            android:drawableStart="@drawable/hours"
            android:paddingStart="10dp"
            android:paddingEnd="15dp"
            android:drawablePadding="6dp"
            android:enabled="false"
            android:maxLines="1"
            android:singleLine="true"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnEditarHorarioDe"
            android:layout_width="45dp"
            android:layout_height="48dp"
            android:textAlignment="center"
            android:drawableStart="@drawable/toggle_selector"
            android:backgroundTint="@color/amarelo"
            app:layout_constraintBottom_toBottomOf="@id/etHorarioDe"
            app:layout_constraintEnd_toEndOf="@id/etHorarioDe"
            app:layout_constraintTop_toTopOf="@id/etHorarioDe"/>

        <EditText
            android:id="@+id/etHorarioAte"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:background="@drawable/textbox"
            android:drawableStart="@drawable/hours"
            android:drawablePadding="6dp"
            android:enabled="false"
            android:maxLines="1"
            android:minHeight="45dp"
            android:paddingStart="10dp"
            android:paddingEnd="15dp"
            android:singleLine="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintStart_toEndOf="@id/etHorarioDe"
            app:layout_constraintTop_toBottomOf="@id/tvDe" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnEditarHorarioAte"
            android:layout_width="45dp"
            android:layout_height="48dp"
            android:textAlignment="center"
            android:drawableStart="@drawable/toggle_selector"
            android:backgroundTint="@color/amarelo"
            app:layout_constraintBottom_toBottomOf="@id/etHorarioAte"
            app:layout_constraintEnd_toEndOf="@id/etHorarioAte"
            app:layout_constraintTop_toTopOf="@id/etHorarioAte"/>


        <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: "
        app:layout_constraintTop_toBottomOf="@id/etHorarioDe"
        app:layout_constraintStart_toStartOf="@id/tvNome"
        android:layout_marginTop="35dp"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/tbtnStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tvStatus"
        app:layout_constraintStart_toEndOf="@id/tvStatus"
        app:layout_constraintBottom_toBottomOf="@id/tvStatus"
        android:layout_marginStart="10dp"
        android:thumb="@drawable/thumb"
        app:track="@drawable/track"/>

    <TextView
        android:id="@+id/tvToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/tbtnStatus"
        app:layout_constraintTop_toTopOf="@id/tvStatus"
        android:layout_marginStart="15dp"
        android:text="Indisponível"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#595959"/>

    <TextView
        android:id="@+id/tvHorasContab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvStatus"
        app:layout_constraintBottom_toTopOf="@id/cvCard"
        app:layout_constraintStart_toStartOf="@id/tvNome"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="40dp"
        android:text="Horas Contabilizadas: "
        android:textStyle="bold"
        android:textSize="20sp"
        />

        <TextView
            android:id="@+id/tvHorasContabInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tvHorasContab"
            app:layout_constraintBottom_toBottomOf="@id/tvHorasContab"
            app:layout_constraintStart_toEndOf="@id/tvHorasContab"
            android:text="16"
            android:textStyle="bold"
            android:textSize="20sp"
            android:background="@drawable/textbox"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/cvCard"
            android:layout_width="fill_parent"
            android:layout_height="500dp"
            android:layout_marginStart="-90dp"
            android:layout_marginTop="-150dp"
            android:backgroundTint="@color/amarelo"
            app:cardCornerRadius="80dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:text="Sair da conta"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="@id/cvCard"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/cvCard"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:background="@color/fui_transparent"
            android:drawableEnd="@drawable/logout"
            android:drawablePadding="5dp"
            android:translationZ="199dp"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>