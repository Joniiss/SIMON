    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivPerfil"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="45dp"
        android:backgroundTint="@color/azul_escuro"
        android:src="@drawable/placeholder"
        app:civ_border_width="4dp"
        app:civ_border_color="@color/azul_escuro"
        android:contentDescription="FOTO AQUI JONIS"
        />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivSmallerCam"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="@id/ivPerfil"
            app:layout_constraintEnd_toEndOf="@id/ivPerfil"
            android:src="@color/azul_claro"
            app:civ_border_width="4dp"
            app:civ_border_color="@color/azul_escuro"/>

        <Button
            android:id="@+id/btnChangePhoto"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/photo"
            android:backgroundTint="@color/fui_transparent"
            app:layout_constraintStart_toStartOf="@id/ivSmallerCam"
            app:layout_constraintEnd_toEndOf="@id/ivSmallerCam"
            app:layout_constraintTop_toTopOf="@id/ivSmallerCam"
            app:layout_constraintBottom_toBottomOf="@id/ivSmallerCam"
            />

    <TextView
        android:id="@+id/tvNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/ivPerfil"
        app:layout_constraintEnd_toEndOf="@id/ivPerfil"
        app:layout_constraintTop_toBottomOf="@id/ivPerfil"
        android:layout_marginTop="15sp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:text="João Lisan Al Gaib Muadib"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="24sp"
        />

    <TextView
        android:id="@+id/tvContato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNome"
        android:layout_marginTop="25dp"
        android:layout_marginStart="30dp"
        android:text="Contato"
        android:textStyle="bold"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/etCel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="45dp"
        app:layout_constraintTop_toBottomOf="@id/tvContato"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/textbox"
        android:drawableStart="@drawable/whatsapp"
        android:paddingStart="10dp"
        android:paddingEnd="45dp"
        android:drawablePadding="6dp"
        android:enabled="false"
        android:maxLines="1"
        android:singleLine="true"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnEditarCel"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/etCel"
        app:layout_constraintBottom_toBottomOf="@id/etCel"
        app:layout_constraintEnd_toEndOf="@id/etCel"
        android:textAlignment="center"
        android:drawableStart="@drawable/edit"
        android:backgroundTint="@color/amarelo"
        />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="45dp"
        app:layout_constraintTop_toBottomOf="@id/etCel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/textbox"
        android:drawableStart="@drawable/email"
        android:paddingStart="10dp"
        android:paddingEnd="45dp"
        android:drawablePadding="6dp"
        android:enabled="false"
        android:maxLines="1"
        android:singleLine="true"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnEditarEmail"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/etEmail"
        app:layout_constraintBottom_toBottomOf="@id/etEmail"
        app:layout_constraintEnd_toEndOf="@id/etEmail"
        android:textAlignment="center"
        android:drawableStart="@drawable/edit"
        android:backgroundTint="@color/amarelo"
        />

    <TextView
        android:id="@+id/tvPredio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/etPredio"
        app:layout_constraintTop_toBottomOf="@id/etEmail"
        android:layout_marginTop="35dp"
        android:text="Prédio"
        android:textStyle="bold"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/etPredio"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:minHeight="45dp"
        app:layout_constraintTop_toBottomOf="@id/tvPredio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/etSala"
        android:background="@drawable/textbox"
        android:drawableStart="@drawable/building"
        android:paddingStart="10dp"
        android:paddingEnd="15dp"
        android:drawablePadding="6dp"
        android:enabled="true"
        android:maxLines="1"
        android:singleLine="true"
        />

    <TextView
        android:id="@+id/tvSala"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/etSala"
        app:layout_constraintTop_toTopOf="@id/tvPredio"
        android:layout_marginTop="0dp"
        android:text="Sala"
        android:textStyle="bold"
        android:textSize="20sp"
        />


        <EditText
            android:id="@+id/etSala"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:minHeight="45dp"
            app:layout_constraintTop_toBottomOf="@id/tvPredio"
            app:layout_constraintStart_toEndOf="@id/etPredio"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/textbox"
            android:drawableStart="@drawable/room"
            android:paddingStart="10dp"
            android:paddingEnd="15dp"
            android:drawablePadding="6dp"
            android:enabled="true"
            android:maxLines="1"
            android:singleLine="true"
            />

        <TextView
            android:id="@+id/tvHorario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/etPredio"
            app:layout_constraintTop_toBottomOf="@id/etPredio"
            android:layout_marginTop="15dp"
            android:text="Horário"
            android:textStyle="bold"
            android:textSize="20sp"
            />

        <EditText
            android:id="@+id/etHorario"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:minHeight="45dp"
            app:layout_constraintTop_toBottomOf="@id/tvHorario"
            app:layout_constraintStart_toStartOf="@id/tvHorario"
            android:background="@drawable/textbox"
            android:drawableStart="@drawable/hours"
            android:paddingStart="10dp"
            android:paddingEnd="15dp"
            android:drawablePadding="6dp"
            android:enabled="true"
            android:maxLines="1"
            android:singleLine="true"
            />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: "
        app:layout_constraintTop_toBottomOf="@id/etHorario"
        app:layout_constraintStart_toStartOf="@id/tvNome"
        android:layout_marginTop="35dp"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/tbtnStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tvStatus"
        app:layout_constraintStart_toEndOf="@id/tvStatus"
        app:layout_constraintBottom_toBottomOf="@id/tvStatus"
        android:layout_marginStart="10dp"
        android:thumb="@drawable/thumb"
        app:track="@drawable/track"/>

    <TextView
        android:id="@+id/tvToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/tbtnStatus"
        app:layout_constraintTop_toTopOf="@id/tvStatus"
        android:layout_marginStart="15dp"
        android:text="Indisponível"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#595959"/>

    <TextView
        android:id="@+id/tvHorasContab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvStatus"
        app:layout_constraintStart_toStartOf="@id/tvNome"
        android:layout_marginTop="35dp"
        android:text="Horas Contabilizadas: "
        android:textStyle="bold"
        android:textSize="20sp"
        />

        <TextView
            android:id="@+id/tvHorasContabInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tvHorasContab"
            app:layout_constraintBottom_toBottomOf="@id/tvHorasContab"
            app:layout_constraintStart_toEndOf="@id/tvHorasContab"
            android:text="16 Horas"
            android:textStyle="bold"
            android:textSize="20sp"
            android:background="@drawable/textbox"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            />

        <Button
            android:id="@+id/btnSalvar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:text="SALVAR"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/tvHorasContab"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="35dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/cvCard"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/cvCard"
            android:layout_width="fill_parent"
            android:layout_height="500dp"
            android:layout_marginStart="-90dp"
            android:layout_marginTop="-150dp"
            android:backgroundTint="@color/amarelo"
            app:cardCornerRadius="80dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>