<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="UserFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvTopo"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:backgroundTint="@color/amarelo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/cvTopo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        android:elevation="4dp"
        android:text="Olá %NOME%"
        android:textSize="25sp"
        />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/cvTopo"
        app:layout_constraintBottom_toBottomOf="@id/cvTopo"
        android:layout_marginEnd="15dp"
        android:backgroundTint="@color/azul_escuro"/>

    <ImageView
        android:id="@+id/ivPerfil"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:layout_constraintTop_toBottomOf="@id/cvTopo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:src="@drawable/placeholder"
        android:background="@drawable/rounded_button"
        android:contentDescription="FOTO AQUI JONIS"
        />

    <TextView
        android:id="@+id/tvNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/ivPerfil"
        app:layout_constraintTop_toBottomOf="@id/ivPerfil"
        android:layout_marginTop="25sp"
        android:text="NOME"
        />

    <TextView
        android:id="@+id/tvContato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/tvNome"
        app:layout_constraintTop_toBottomOf="@id/tvNome"
        android:layout_marginTop="5dp"
        android:text="CONTATO"
        />

    <TextView
        android:id="@+id/tvSalaHorario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/tvNome"
        app:layout_constraintTop_toBottomOf="@id/tvContato"
        android:layout_marginTop="5dp"
        android:text="SALA E HORÁRIO"
        />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: "
        app:layout_constraintTop_toBottomOf="@id/tvSalaHorario"
        app:layout_constraintStart_toStartOf="@id/tvNome"
        android:layout_marginTop="30dp"/>

    <ToggleButton
        android:id="@+id/tbtnStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvHorasContab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvStatus"
        app:layout_constraintStart_toStartOf="@id/tvNome"
        android:layout_marginTop="70dp"
        android:text="Horas Contabilizadas"
        />

</androidx.constraintlayout.widget.ConstraintLayout>