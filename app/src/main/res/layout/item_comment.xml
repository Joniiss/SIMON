<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="10dp">

    <TextView
        android:id="@+id/tvNomeComentario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="5dp"
        android:text="Nome comentarista"
        android:textColor="#4E4E4E"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/tvOP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvNomeComentario"
        android:layout_marginTop="5dp"
        android:text="OP"
        android:textStyle="bold"
        android:layout_marginStart="4dp"
        android:textColor="@color/azul_escuro"
        android:textSize="14sp"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="4dp"
        android:layout_height="4dp"
        app:layout_constraintTop_toTopOf="@id/tvNomeComentario"
        app:layout_constraintBottom_toBottomOf="@id/tvNomeComentario"
        app:layout_constraintStart_toEndOf="@id/tvOP"
        android:layout_marginStart="10dp"
        android:backgroundTint="#4E4E4E"
        app:circularflow_radiusInDP="50dp"/>

    <TextView
        android:id="@+id/tvDataComentario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tvNomeComentario"
        app:layout_constraintStart_toEndOf="@id/tvOP"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:text="horas ou data"
        android:textColor="#4E4E4E"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/tvDescComentario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvNomeComentario"
        app:layout_constraintStart_toStartOf="@id/tvNomeComentario"
        android:layout_marginTop="5dp"
        android:text="Descrição do comentário"
        android:textSize="16sp"
        />
    
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnUpvote"
        android:layout_width="55dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/tvDescComentario"
        app:layout_constraintStart_toStartOf="parent"
        android:drawableStart="@drawable/upvote"
        android:drawablePadding="-10dp"
        android:text="12"
        android:background="@color/fui_transparent"/>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/btnUpvote"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="6dp"
        android:background="@color/azul_escuro"
        />

</androidx.constraintlayout.widget.ConstraintLayout>