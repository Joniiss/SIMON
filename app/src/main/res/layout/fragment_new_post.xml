<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addPost"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewPostFragment"
    android:scrollbarSize="0dip">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

    <EditText
        android:id="@+id/etAddTittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:hint="TÃ­tulo"
        android:textStyle="bold"
        android:textSize="28sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/fui_transparent"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        app:cardBackgroundColor="@color/azul_escuro"
        app:layout_constraintTop_toBottomOf="@id/etAddTittle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="2dp"
        />
    
    <EditText
        android:id="@+id/etAddComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="190dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etAddTittle"
        android:layout_marginTop="30dp"
        android:hint="Texto do post"
        android:textSize="24sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/fui_transparent"
        android:gravity="start"
        />
    
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAddPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/etAddComment"
        app:layout_constraintStart_toStartOf="@id/etAddComment"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="20dp"
        android:text="Publicar"
        android:textColor="@color/white"
        android:paddingHorizontal="25dp"
        android:background="@drawable/rounded_disabled_public"
        android:clickable="false"
        android:alpha="0.69"
        android:layout_marginBottom="30dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>