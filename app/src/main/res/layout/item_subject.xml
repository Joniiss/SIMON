<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvFundoMateria"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/itemsubject"
        android:layout_marginVertical="18dp"
        />

    <TextView
        android:id="@+id/tvCor"
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toTopOf="@id/tvFundoMateria"
        android:layout_height="30dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/colorcard"
        />

    <TextView
        android:id="@+id/tvNomeMateria"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/tvCor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="25dp"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="20sp"
        app:autoSizeMaxTextSize="26sp"
        app:autoSizeStepGranularity="1sp"
        android:text="Materia"
        android:paddingHorizontal="5dp"


        />

</androidx.constraintlayout.widget.ConstraintLayout>