<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivFotoMonitor"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/fotoperfil"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/azul_escuro"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/ivStatusItemMonitor"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintEnd_toEndOf="@id/ivFotoMonitor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/azul_escuro"
        app:cardBackgroundColor="#e81e1e"
        app:cardCornerRadius="50dp"
        />

    <TextView
        android:id="@+id/tvNomeMonitor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/ivFotoMonitor"
        app:layout_constraintTop_toTopOf="@id/ivFotoMonitor"
        android:layout_marginStart="15dp"
        android:layout_marginTop="3dp"
        android:text="Nome placeholder"
        android:textSize="20sp"
        android:textStyle="bold"
        />
    
    <TextView
        android:id="@+id/tvLocal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/tvNomeMonitor"
        app:layout_constraintTop_toBottomOf="@id/tvHorario"
        android:text="Local: S02 - H15"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tvHorario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/tvNomeMonitor"
        app:layout_constraintTop_toBottomOf="@id/tvNomeMonitor"
        android:text="Horário: 16:00 às 18:40"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/seta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="20dp"
        android:textSize="25sp"
        android:text=">"
        android:textStyle="bold"
        android:textColor="@color/azul_claro"/>
        
        
</androidx.constraintlayout.widget.ConstraintLayout>